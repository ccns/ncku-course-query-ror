<div class="app-area">
	<div class="mdl-grid">
		<div class="mdl-cell mdl-cell--1-col menu pull-right">
			<button type="button" class="mdl-button mdl-button--icon mdl-js-button"><i class="material-icons md-dark">search</i></button>
			<button type="button" class="mdl-button mdl-button--icon mdl-js-button"><i class="material-icons md-dark md-inactive">school</i></button>
